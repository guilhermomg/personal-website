---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import LatestArticles from "../components/LatestArticles.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// SEO data based on language
const seoData = {
    en: {
        title: "Guilhermo González - Full-Stack Developer",
        description:
            "Full-Stack Developer passionate about creating innovative digital solutions and exceptional user experiences. Specializing in JavaScript, TypeScript, React, and Node.js. View my portfolio of projects.",
        keywords:
            "Full-Stack Developer, Web Developer, JavaScript, TypeScript, React, Node.js, Python, Software Engineer, Frontend, Backend, Portfolio, Projects, Web Applications",
    },
    pt: {
        title: "Guilhermo González - Desenvolvedor Full-Stack",
        description:
            "Desenvolvedor Full-Stack apaixonado por criar soluções digitais inovadoras e experiências excepcionais para usuários. Especialista em JavaScript, TypeScript, React e Node.js. Veja meu portfólio de projetos.",
        keywords:
            "Desenvolvedor Full-Stack, Desenvolvedor Web, JavaScript, TypeScript, React, Node.js, Python, Engenheiro de Software, Frontend, Backend, Portfólio, Projetos, Aplicações Web",
    },
    fr: {
        title: "Guilhermo González - Développeur Full-Stack",
        description:
            "Développeur Full-Stack passionné par la création de solutions digitales innovantes et d'expériences utilisateur exceptionnelles. Spécialisé en JavaScript, TypeScript, React et Node.js. Consultez mon portfolio de projets.",
        keywords:
            "Développeur Full-Stack, Développeur Web, JavaScript, TypeScript, React, Node.js, Python, Ingénieur Logiciel, Frontend, Backend, Portfolio, Projets, Applications Web",
    },
};

const currentSeo = seoData[lang] || seoData.en;
---

<Layout
    title={currentSeo.title}
    description={currentSeo.description}
    keywords={currentSeo.keywords}
    author="Guilhermo González"
>
    <Navigation />
    <main>
        <Hero />
        <About />
        <Experience />
        <Projects />
        <LatestArticles />
        <Contact />
    </main>
    <Footer />
</Layout>

<style>
    /* Smooth scrolling for the entire page */
    html {
        scroll-behavior: smooth;
    }

    /* Custom scrollbar for webkit browsers */
    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #555;
    }
</style>
