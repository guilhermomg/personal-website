---
export const prerender = false;

import Layout from "../../../../layouts/Layout.astro";
import { createServerClient } from "../../../../lib/supabase";
import { marked } from "marked";

const adminGithubUsername = import.meta.env.GITHUB_USERNAME;

// Configure marked
marked.setOptions({
    breaks: true,
    gfm: true,
});

const supabase = createServerClient(Astro.cookies);
const {
    data: { user },
    error,
} = await supabase.auth.getUser();

// Redirect to login if not authenticated
if (!user || error) {
    return Astro.redirect("/admin/login");
}

// Get GitHub username from user metadata
const userGithubUsername =
    user.user_metadata?.user_name || user.user_metadata?.preferred_username;

if (userGithubUsername !== adminGithubUsername) {
    // Sign out and redirect
    await supabase.auth.signOut();
    return Astro.redirect("/admin/login?error=unauthorized");
}

// Get article ID from URL params
const { id } = Astro.params;
if (!id) {
    return new Response("Not Found", { status: 404 });
}

// Fetch article by ID (preview allows any status)
const { data: article, error: fetchError } = await supabase
    .from("articles")
    .select(
        "id, title, slug, content, status, created_at, updated_at, description, featured_image, keywords, excerpt, read_time",
    )
    .eq("id", id)
    .single();

if (!article || fetchError) {
    return new Response("Not Found", { status: 404 });
}

// Render markdown to HTML
const renderedContent = marked.parse(article.content || "") as string;

const formatDate = (value?: string | null) => {
    if (!value) return "Not set";
    const date = new Date(value);
    return Number.isNaN(date.valueOf())
        ? "Not set"
        : date.toLocaleString("en-US", {
              dateStyle: "medium",
              timeStyle: "short",
          });
};

// Fetch siteAuthor from personal_info table
const { data: personalInfo } = await supabase
    .from("personal_info")
    .select("full_name")
    .single();

const siteAuthor = personalInfo?.full_name || "Admin";
---

<Layout title={`${article.title ?? "Preview"} - Admin - ${siteAuthor}`}>
    <div
        class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800"
    >
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="mb-8 flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <a
                        href="/admin/dashboard"
                        class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300"
                    >
                        ‚Üê Back to Dashboard
                    </a>
                    <a
                        href={`/admin/articles/${article.id}/edit`}
                        class="text-gray-700 dark:text-gray-200 hover:underline"
                    >
                        Edit Article
                    </a>
                </div>
                <div class="flex items-center gap-2">
                    {
                        article.status === "draft" ? (
                            <span class="inline-flex items-center px-3 py-1 text-xs font-semibold rounded-full bg-amber-100 text-amber-800 dark:bg-amber-900/40 dark:text-amber-200">
                                Draft Preview
                            </span>
                        ) : (
                            <span class="inline-flex items-center px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-900/40 dark:text-green-200">
                                Published
                            </span>
                        )
                    }
                    <span class="text-sm text-gray-600 dark:text-gray-400">
                        Updated {formatDate(article.updated_at)}
                    </span>
                </div>
            </div>

            <!-- OG Card Preview -->
            <div
                class="mb-8 bg-white dark:bg-gray-800 shadow-xl rounded-lg p-6"
            >
                <h2
                    class="text-lg font-semibold text-gray-900 dark:text-white mb-4"
                >
                    Social Media Preview (LinkedIn/Twitter)
                </h2>
                <div
                    class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden max-w-xl"
                >
                    {
                        article.featured_image ? (
                            <img
                                src={article.featured_image}
                                alt="OG preview"
                                class="w-full h-64 object-cover bg-gray-100 dark:bg-gray-700"
                                onerror="this.src='/og-image.jpg'"
                            />
                        ) : (
                            <div class="w-full h-64 bg-gray-100 dark:bg-gray-700 flex items-center justify-center text-gray-400">
                                No featured image
                            </div>
                        )
                    }
                    <div class="p-4 bg-gray-50 dark:bg-gray-900">
                        <h3
                            class="font-semibold text-gray-900 dark:text-white text-lg line-clamp-2"
                        >
                            {article.title}
                        </h3>
                        <p
                            class="text-sm text-gray-600 dark:text-gray-400 mt-1 line-clamp-2"
                        >
                            {
                                article.description ||
                                    article.excerpt ||
                                    "No description provided"
                            }
                        </p>
                        <p
                            class="text-xs text-gray-500 dark:text-gray-500 mt-2"
                        >
                            gonzalez.dev.br
                        </p>
                    </div>
                </div>
                {
                    article.keywords && (
                        <div class="mt-4">
                            <p class="text-sm font-medium text-gray-700 dark:text-gray-300">
                                Keywords:
                            </p>
                            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                                {article.keywords}
                            </p>
                        </div>
                    )
                }
                {
                    article.read_time && (
                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
                            Estimated read time:{" "}
                            <strong>{article.read_time} minutes</strong>
                        </p>
                    )
                }
            </div>

            <article class="bg-white dark:bg-gray-800 shadow-xl rounded-lg p-8">
                <header class="mb-6">
                    <h1
                        class="text-3xl font-bold text-gray-900 dark:text-white"
                    >
                        {article.title}
                    </h1>
                    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                        Created {formatDate(article.created_at)}
                    </p>
                </header>

                <div
                    class="prose prose-indigo dark:prose-invert max-w-none"
                    set:html={renderedContent}
                />
            </article>
        </div>
    </div>
</Layout>
