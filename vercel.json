{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "astro",
  "functions": {
    "**/*.astro": {
      "runtime": "nodejs20.x"
    }
  },
  "redirects": [
    {
      "source": "/resume",
      "destination": "/resumes/guilhermo-gonzalez-resume-en.pdf"
    },
    {
      "source": "/cv",
      "destination": "/resumes/guilhermo-gonzalez-resume-en.pdf"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}